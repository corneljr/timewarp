<ion-view title='TimeWarp!' style="background-color:#f6f6f6;">
    <ion-content padding="false" class="has-header">
        <div class='flight-card'>
            <h3>Outbound to {{flightDetails.destination}}</h3>
            <p>{{tripDetails.departureDate | date:'EEE MMM d, yyyy'}}</p>
            <div ng-repeat="flight in tripDetails['outbound']['flights']">
                <div class='row'>
                    <div class='col-20'>
                        <img src="{{tripDetails['outbound']['airlineImageUrl']}}" height='25' width='auto'>
                    </div>
                    <div class='col-80'>
                        <p>{{tripDetails['outbound']['airline']}} {{flight['id']}}</p>
                    </div>
                </div>
                <div class='row'>
                    <div class='col'>
                        <p>{{flight['segmentOriginString']}}</p>
                    </div>
                    <div class='col align-right'>
                        <p>{{flight['segmentDestinationString']}}</p>
                    </div>
                </div>
                <div class='row'>
                    <div class='col col-center'>
                        <h3>{{flight['segmentOrigin']}}</h3>
                    </div>
                    <div class='col col-center'>
                        <img src="<%= image_url('nonstop_graphic') %>" height='25' width='auto'>
                    </div>
                    <div class='col col-center align-right'>
                        <h3>{{flight['segmentDestination']}}</h3>
                    </div>
                </div>
                <div class='row'>
                    <div class='col'>
                        <p>{{flight['segmentDepartureTime']}}</p>
                    </div>
                    <div class='col align-right'>
                        <p>{{flight['segmentArrivalTime']}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class='flight-card'>
            <h3>Return to {{flightDetails.origin}}</h3>
            <p>{{tripDetails.returnDate}}</p>
            <div ng-repeat="flight in tripDetails['return']['flights']">
                <div class='row'>
                    <div class='col-20'>
                        <img src="{{tripDetails['return']['airlineImageUrl']}}" height='25' width='auto'>
                    </div>
                    <div class='col-80'>
                        <p>{{tripDetails['return']['airline']}} {{flight['id']}}</p>
                    </div>
                </div>
                <div class='row'>
                    <div class='col'>
                        <p>{{flight['segmentOriginString']}}</p>
                    </div>
                    <div class='col align-right'>
                        <p>{{flight['segmentDestinationString']}}</p>
                    </div>
                </div>
                <div class='row'>
                    <div class='col col-center'>
                        <h3>{{flight['segmentOrigin']}}</h3>
                    </div>
                    <div class='col col-center'>
                        <img src="<%= image_url('nonstop_graphic') %>" height='25' width='auto'>
                    </div>
                    <div class='col col-center align-right'>
                        <h3>{{flight['segmentDestination']}}</h3>
                    </div>
                </div>
                <div class='row'>
                    <div class='col'>
                        <p>{{flight['segmentDepartureTime']}}</p>
                    </div>
                    <div class='col align-right'>
                        <p>{{flight['segmentArrivalTime']}}</p>
                    </div>
                </div>
            </div>
        </div>
    <div style="height:100px;"></div>
    </ion-content>
    <div class='fixed-to-bottom'>
        <div class='row'>
            <div class='col'><p>Roundtrip, Per Person</p></div>
            <div class='col'><p>{{tripDetails['price']}}</p></div>
        </div>
        <button class='button button-positive button-block'>Choose Travellers & Payment</button>
    </div>
</ion-view>