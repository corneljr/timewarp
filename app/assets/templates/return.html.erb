<ion-view title='TimeWarp!' style="background-color:#FFFFFF;">
    <ion-content padding="false" class="has-header">
        <div class="info-container" style='padding-top:10px;padding-bottom:10px;'>
            <h4>Return to {{flightList.origin}}</h4>
            <div class='row'>
                <div class='col'>
                    <p>{{flightList.returnDate | date:'EEE MMM d, yyyy'}}</p>
                </div>
                <div class='col'>
                    <p class='align-right'>Round Trip, Per Person</p>  
                </div>
            </div>
        </div>
        <ion-list>
            <ion-item ng-repeat="flight in flightList['return']" ng-click="tripSummary(flight,flightList['trip_prices'][outbound_ids + flight['return_ids']])" ng-if="returnValid(flight)">
                <div class="row">
                    <div class='col col-center'>
                        <p>{{flightList['trip_prices'][outbound_ids + flight['return_ids']] | currency:"$":0}}</p>
                    </div>
                    <div class="col col-center">
                        <p class="align-right" style="color:black;">{{flight.departureTime}} - {{flight.arrivalTime}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class='col-10 col-center'>
                        <img src={{flight.airlineImageUrl}} height='25' width='auto'>
                    </div>
                    <div class="col col-center">
                        <p class='align-left' style='display:inline;'>{{flight.airline}}</p>
                    </div>
                    <div class="col">
                        <p class="align-right">{{flight.duration}}, <ng-pluralize count="flight['stops']" when="{'1': '1 stop','other':'{} stops'}"></ng-pluralize></ng-pluralize></p>
                    </div>
                </div>
            </ion-item>
        </ion-list>
    </ion-content>
</ion-view>